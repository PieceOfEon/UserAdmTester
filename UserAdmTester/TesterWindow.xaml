<Window x:Class="UserAdmTester.TesterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserAdmTester"
        mc:Ignorable="d"
        Title="TesterWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TesterName" BorderThickness="1" HorizontalAlignment="Left" Margin="78,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" Height="173" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <Label Content="Testers" HorizontalAlignment="Left" Margin="165,69,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ProjectsNameTesters" BorderThickness="1" HorizontalAlignment="Left" Margin="400,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" Height="173" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <Label Content="Projects" HorizontalAlignment="Left" Margin="486,69,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioDoneTester" Content="Done" HorizontalAlignment="Left" Margin="649,101,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioNotDoneTester" Content="Not Done" HorizontalAlignment="Left" Margin="649,130,0,0" VerticalAlignment="Top"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="649,168,0,0" VerticalAlignment="Top"/>
        <Button Content="ESC" HorizontalAlignment="Left" Margin="649,217,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
